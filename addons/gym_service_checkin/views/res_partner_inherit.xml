<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gym_res_partner_inherit" model="ir.ui.view">
            <field name="name">gym_res_partner_inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[@colspan='4']" position="before">

                    <group string="健身房基本資料" col="4">
                        <field name="id_card"/>
                        <field name="line_id"/>
                        <field name="fb_id"/>
                        <field name="emergency_contact"/>
                        <field name="emergency_relation"/>
                        <field name="emergency_mobile"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>